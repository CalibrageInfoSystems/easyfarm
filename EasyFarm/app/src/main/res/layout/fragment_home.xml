<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_container"
    tools:context=".Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_marginTop="100dp"
        android:background="@drawable/white_bg"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_weight="0.2"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/pro_farmers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/greencard_bgg"

                    android:orientation="horizontal">

                    <TextView
                        style="@style/Common_textView"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/margin_20"
                        android:textAlignment="textStart"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_regular"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:text="@string/farmers" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
android:id="@+id/linear"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_weight="0.2"
                    >

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:background="@drawable/circle"
                        android:drawableTop="@drawable/user_f"
                        android:paddingTop="15dp"

                        />

                </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
           android:visibility="gone"

            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/converted_farmers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/margin_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/greencard_bgg"

                    android:orientation="horizontal">

                    <TextView
                        style="@style/Common_textView"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/margin_20"
                        android:textAlignment="textStart"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:text="@string/vendor" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:id="@+id/linea2"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_weight="0.2"
                        >

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle"
                            android:drawableTop="@drawable/users_f"
                            android:paddingTop="15dp"

                            />


                        />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:weightSum="1">



            <androidx.cardview.widget.CardView
                android:id="@+id/buyer_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/red"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/greencard_bgg"

                    android:orientation="horizontal">

                    <TextView
                        style="@style/Common_textView"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/margin_20"
                        android:textAlignment="textStart"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_height="wrap_content"
                        android:text="@string/buyers" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:id="@+id/linear3"
                        android:layout_weight="0.2"
                        android:layout_marginRight="@dimen/margin_10"
                        >

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/circle"
                            android:drawableTop="@drawable/money_f"
                            android:paddingTop="15dp"

                            />


                        />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/vendor_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"

                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/margin_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/greencard_bgg"

                android:orientation="horizontal">

                <TextView
                    style="@style/Common_textView"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/margin_20"
                    android:textAlignment="textStart"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:text="@string/logistic" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:id="@+id/linear4"
                    android:layout_weight="0.2"
                    android:layout_marginRight="@dimen/margin_10"
                    >

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle"
                        android:drawableTop="@drawable/truck_f"
                        android:paddingTop="15dp"

                        />


                    />
                </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </LinearLayout>

</FrameLayout>