<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cis.easyfarm.Fragments.Signup_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/welcome_text"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            style="@style/Common_textView_title"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_semibold"
            android:layout_toRightOf="@+id/back"
            android:text="@string/thankyou"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"

            android:textColor="@color/whitepure"
            android:textSize="30dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/static_text"
        android:orientation="horizontal"
        android:layout_below="@+id/welcome_text"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            style="@style/Common_textView_title"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_semibold"
            android:layout_toRightOf="@+id/back"
            android:text="@string/step3"

            android:layout_marginLeft="20dp"

            android:textColor="@color/whitepure"
            android:textSize="24dp" />
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            style="@style/Common_textView_title"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"
            android:layout_toRightOf="@+id/back"
            android:text="@string/total_steps"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_5"
            android:textColor="@color/gray"
            android:textSize="20dp" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/static_text"
        android:layout_above="@+id/bottomLayout">



        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/white_bg"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_15">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    style="@style/Common_textView_title"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_semibold"
                    android:layout_toRightOf="@+id/back"
                    android:text="@string/register"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"

                    android:layout_marginTop="@dimen/margin_15"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    style="@style/Common_textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_toRightOf="@+id/back"
                    android:fontFamily="@font/rubik_regular"

                    android:gravity="center_vertical"
                    android:text="@string/fill_details"
                    android:textColor="@color/gray"
                    android:textSize="20dp" />

            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/facebook_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/facebook_id"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:paddingLeft="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"


                >


                <EditText
                    android:id="@+id/facebook_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"

                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_16" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Instagram_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Instagram_id"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:paddingLeft="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"


                >


                <EditText
                    android:id="@+id/Instagram_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"

                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_16" />

            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="10dp"
                android:background="@drawable/spinner_bgg"
                android:elevation="2dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spin_willness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@null"
                    android:minHeight="0dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="8dp"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_15">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    style="@style/Common_textView_title"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_semibold"
                    android:layout_toRightOf="@+id/back"
                    android:text="@string/government"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"

                    android:layout_marginTop="@dimen/margin_15"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/margin_15">

                    <Button
                        android:id="@+id/adhar_upload"
                        style="@style/Common_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_toRightOf="@+id/back"
                        android:layout_weight="0.33"
                        android:background="@drawable/btn_bg"
                        android:fontFamily="@font/hind_regular"
                        android:gravity="center"
                        android:text="@string/adhar"

                        android:textSize="@dimen/activity_horizontal_margin" />

                    <Button
                        android:id="@+id/local_doc_upload"
                        style="@style/Common_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_toRightOf="@+id/back"
                        android:fontFamily="@font/hind_regular"
                        android:layout_weight="0.33"
                        android:gravity="center"
                        android:text="@string/local_proof"
                        android:textSize="@dimen/activity_horizontal_margin" />
                    <Button
                        style="@style/Common_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/experiance_doc_upload"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_toRightOf="@+id/back"
                        android:fontFamily="@font/hind_regular"
                        android:layout_weight="0.33"
                        android:background="@drawable/btn_bg"
                        android:gravity="center"
                        android:text="@string/experience"
                        android:textSize="@dimen/activity_horizontal_margin" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_weight="0.5"
                        android:id="@+id/maindoc"
                        >

                        <RelativeLayout
                            android:id="@+id/lyt_img2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/margin_5"
                            android:layout_weight=".33">
                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/btn_background" />


                            <ImageView
                                android:id="@+id/deleteIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_cross">

                            </ImageView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/docText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="abc" />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".5"
                        android:visibility="gone"
                        android:id="@+id/maindoc2"
                        >

                        <RelativeLayout
                            android:id="@+id/lyt_img1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="@dimen/margin_5"
                            android:layout_weight=".33">
                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="1dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/btn_background" />


                            <ImageView
                                android:id="@+id/deleteIcon2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_cross">

                            </ImageView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/docText2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="abc" />


                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Education_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/education"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:paddingLeft="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"


                >


                <EditText
                    android:id="@+id/Education_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_regular"

                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_16" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/experiance_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/experience"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:paddingLeft="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"


                >


                <EditText
                    android:id="@+id/experiance_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_regular"

                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_size_16" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/margin_5"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/nextBT"
                        style="@style/Common_Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/signup" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout

        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/backBT"
            style="@style/Common_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/flot_clr"
            android:src="@drawable/left_arrow"
            app:fabCustomSize="40dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="12dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"

            android:layout_alignParentRight="true"
            android:backgroundTint="@color/flot_clr"
            android:src="@drawable/ic_right_arrow"
            app:fabCustomSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--        <Button-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:id="@+id/nextBT"-->
        <!--            style="@style/Common_Button"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:minWidth="50dp"-->
        <!--            android:text="next"-->
        <!--            android:textColor="@color/white" />-->

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_marginTop="140dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:layout_marginTop="6dp"

            android:textColor="@color/black"
            style="@style/Common_textView"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:layout_marginTop="2dp"
            android:id="@+id/signup"
            style="@style/Common_textView"
            android:text="Sign in"
            android:textAlignment="center"
            android:textColor="@color/flot_clr"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>
</RelativeLayout>